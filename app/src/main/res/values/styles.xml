<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="drawer_element">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="drawer_element_text">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center_vertical</item>

    </style><style name="nav_text">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="input_form">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/text_input_border</item>
        <item name="android:includeFontPadding">true</item>
        <item name="android:padding">8sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_blue_link">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/best_blue</item>
        <item name="android:textColorLink">@color/best_blue</item>
    </style>

    <style name="button_available">
        <item name="android:clickable">true</item>
        <item name="android:backgroundTint">@color/green_back</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="button_occupied">
        <item name="android:clickable">false</item>
        <item name="android:backgroundTint">@color/red_back</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontWeight">700</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="btnDate">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginVertical">32dp</item>
    </style>

    <style name="viewDateTime">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/text_input_border</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">4dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="dateImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="submit_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="btn_sub_and_cancel">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>